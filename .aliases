#============================================
# SYSTEM Aliases
#============================================
alias c='cd'
alias cl='clear'

#============================================
# Composer Aliases
#============================================
alias cm='composer'
alias cmda='composer dump-autoload'

#============================================
# Laravel Installer
#============================================
alias lvn='laravel new'

#============================================
# Laravel - Artisan
#============================================
alias pa='php artisan'
alias pas='php artisan serve'
alias pam='php artisan migrate'
alias parl='php artisan route:list'
alias pamf='php artisan migrate:fresh'
alias pamrb='php artisan migrate:rollback'
alias pamrst='php artisan migrate:reset'
alias pat='php artisan tinker'
alias pamm='php artisan make:model'
alias pammig='php artisan make:migration'
alias pamc='php artisan make:controller'
alias pamr='php artisan migrate:rollback'
alias paqw='php artisan queue:work'

#============================================
# GIT Aliases
#============================================
alias gi='git init'
alias grv='git remote -v'
alias gaa='git add .'
alias gs='git status'
alias gl='git log'
alias gd='git diff'
alias gc='git commit'
alias gck='git checkout'
alias gb='git branch'
alias l='git log --oneline --graph'
alias gm='git merge'
alias gp='git push'
alias gpor='git push origin master'
alias grh='git reset --hard'
alias grs='git reset --soft'
alias grb='git rebase'

#============================================
# Node JS
#============================================
alias ni='npm install'
alias nu='npm update'
alias nd='npm run dev'
alias np='npm run prodcution'
alias nw='npm run watch'
alias ndp='npm run dev-pro'

#============================================
# Custom
#============================================
alias code="cd ~/code"

#============================================
# Docker
#============================================
alias d="docker"
alias drm="docker rm"
alias drmi="docker rmi"
alias dps="docker ps"
alias dpsa="docker ps -a"
alias di="docker images"
alias dvls="docker volume ls" alias dei="docker exec -it"
alias deir="docker exec -it --rm"

alias dr="docker run"
alias dri="docker run -it"
alias drim="docker run -it --rm"
alias drirmd="docker run -it --rm -d"

alias dc="docker-compose"
alias dcu="docker-compose up"
alias dcud="docker-compose up -d"
alias dcubd="docker-compose up -d --build"
alias dcurbd="docker-compose up --rm -d --build"
alias dcd="docker-compose down"
alias dcs="docker-compose stop"
alias dcrm="docker-compose rm"

alias dsa="docker stop $(docker ps -a -q)"
alias dra="docker rm $(docker ps -a -q)"

#============================================
# PHPStorm
#============================================
alias ps="open -na \"PhpStorm.app\" --args"

#============================================
# PHPUnit
#============================================
alias pu="vendor/bin/phpunit"

#============================================
# Cypress
#============================================
alias co="node_modules/.bin/cypress open"
